<style>

section.product {
  width: 100%;
  float: left;
  padding: 20px 0;
}

section.product .product-image {
  width: 475px;
  float: left;
  background: transparent;
  min-height: 400px;
  overflow: hidden;
  margin: 0 0 20px 0;
  box-shadow: 0 0 39px rgba(204, 201, 152, 0);
  border-radius: 10px;
  position: relative;
}

section.product .product-image:hover a.buy-now-bt {
  display: block;
}

section.product .product-image a.buy-now-bt {
  position: absolute;
  padding: 5px 30px;
  display: block;
  font-size: 16px;
  color: #fff;
  border: solid 1px #000;
  top: 50%;
  background: #000;
  left: 50%;
  transform: translate(-50%, -50%);
  display: none;
  z-index: 70;
}

section.product .product-image ul {
  width: 3000px;
  float: left;
  padding: 0;
}

section.product .product-image ul li {
  float: left;
  width: 475px;
  list-style: none;
}

section.product .product-image img {
  width: 100%;
}

section.product .product-image-thumbs {
  width: 100%;
  float: left;
}

section.product .product-image-thumbs ul {
  padding: 0;
  width: 100%;
  float: left;
}

section.product .product-image-thumbs ul li {
  width: 22.5%;
  float: left;
  list-style: none;
  margin: 0 3% 0 0;
}

section.product .product-image-thumbs ul li:last-child {
  margin: 0;
}

section.product .product-image-thumbs ul li a {
  display: block;
  background: rgba(255, 255, 255, .2);
  box-shadow: 0 0 15px rgba(0, 0, 0, .1);
  border-radius: 10px;
  border: solid 1px transparent;
}

section.product .product-image-thumbs ul li a.active {
  border: solid 1px rgba(165, 143, 21, .8);
}

section.product .product-image-thumbs ul li img {
  width: 100%;
}

section.product .product-details {
  width: 100%;
  float: left;
  margin-top: 40px;
}

section.product h1 {
  font-size: 32px;
  font-weight: normal;
  margin: 0 0 20px 0;
  text-align: center;
}

section.product .product-details h2 {
  font-size: 16px;
  line-height: 26px;
  color: #555;
  font-weight: normal;
  text-align: center;
  margin: 0 0 40px 0;
}

section.product .product-details h3.price {
  font-size: 48px;
  font-family: serif;
  line-height: 26px;
  font-weight: normal;
  margin: 0 0 40px 0;
}

section.product .product-details ul.product-actions {
  width: 100%;
  float: left;
  padding: 0;
  margin: 0;
}

section.product .product-details ul.product-actions li {
  list-style: none;
  float: left;
  width: 48%;
  text-align: center;
  margin: 0 4% 0 0;
}

section.product .product-details ul.product-actions li:last-child {
  margin: 0;
}

section.product .product-details ul.product-actions li a {
  padding: 5px 20px;
  display: block;
  font-size: 16px;
  color: #000;
  border: solid 1px #000;
  border-radius: 10px;
}

section.product .product-details ul.product-actions li a.buy-now-bt {
  background: #000;
  color: #fff;
}
  
</style>

<section class="product">

  <div class="container">

    <div class="row">

      <div class="col-12 col-md-8 offset-md-2">

        <div class="row">

          <div class="col-12 col-md-8 offset-md-2">

            <div class="product-image">

              <a href="" class="buy-now-bt">Buy now</a>

              <ul>
                {% for image in section.settings.selected-product.media %}
                <li>
                  <a href="javascript:void(0)">
                    <img src="{{ image | image_url: width: 600 }}" alt="{{ image | image_tag }}">
                  </a>
                </li>
                {% endfor %}
              </ul>
              
            </div>

            <div class="product-image-thumbs">

              <ul>
                {% for image in section.settings.selected-product.media %}
                <li>
                  <a href="javascript:void(0)">
                    <img src="{{ image | img_url }}" alt="">
                  </a>
                </li>
                {% endfor %}
              </ul>
              
            </div>
            
          </div>
          
        </div>

        <div class="row">

          <div class="col-12 col-md-8 offset-md-2">

            <div class="product-details">

              <h1>{{ section.settings.selected-product.title }}</h1>

              <h2>{{ section.settings.selected-product.description }}</h2>

              <ul class="product-actions">
                <li><a href="javascript:void(0)" class="buy-now-bt">Buy now</a></li>
                <li><a href="javascript:void(0)">Share</a></li>
              </ul>
              
            </div>
            
          </div>
          
        </div>
        
      </div>
      
    </div>
    
  </div>
  
</section>

{% schema %}
{
  "name": "Product",
  "settings": [
    {
      "type": "product",
      "id": "selected-product",
      "label": "Selected Product"
    }
  ]
}
{% endschema %}